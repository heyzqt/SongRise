<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res/com.example.songriseplayer"
    android:id="@+id/id_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background" >

        <include
            android:id="@+id/include_tianbu_layout"
            layout="@layout/tianbu_layout_transparent" />

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/include_tianbu_layout"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_user_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingBottom="13dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingTop="13dp"
                android:src="@drawable/img_user_menu" />

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                app1:pstsDividerColor="#00ffffff"
                app1:pstsIndicatorColor="#ffffff"
                app1:pstsIndicatorHeight="3dp"
                app1:pstsShouldExpand="true"
                app1:pstsUnderlineColor="#00ffffff" />

            <ImageView
                android:id="@+id/imageview1_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="12dp"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:src="@drawable/img_search" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout1"
            tools:context=".MainActivity" />
    </RelativeLayout>

    <include layout="@layout/layout_menu" />

