<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_item_song_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/imageview_songlist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/main_button_color"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/img_songlist" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击添加歌单"
        android:textColor="@color/white"
        android:paddingLeft="30dp"
        android:layout_toRightOf="@id/imageview_songlist"
        android:layout_centerVertical="true"
        android:textSize="19sp" />    

    <ImageView
        android:id="@+id/imageview_enter_songlist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/img_arrow_right" />

</RelativeLayout>