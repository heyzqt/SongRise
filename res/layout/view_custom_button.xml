<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/custom_song_icon"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="3dp"
        android:padding="5dp"
        android:src="@drawable/singer" />

    <LinearLayout
        android:id="@+id/ll_custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/custom_song_icon"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="2dp" >

        <TextView
            android:id="@+id/tv_custom_song_name"
            style="@style/NotificationTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:text="content"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_custom_song_singer"
                style="@style/NotificationContent"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:text="歌手，歌手" />

            <ImageButton
                android:id="@+id/btn_custom_prev"
                style="@style/btn_custom_style"
                android:src="@drawable/img_appwidget_play_prev_tongzhi" />

            <ImageButton
                android:id="@+id/btn_custom_play"
                style="@style/btn_custom_style"
                android:contentDescription="播放"
                android:src="@drawable/img_appwidget_pause_tongzhi" />

            <ImageButton
                android:id="@+id/btn_custom_next"
                style="@style/btn_custom_style"
                android:contentDescription="下一首"
                android:src="@drawable/img_appwidget_play_next_tongzhi" />

            <ImageButton
                android:id="@+id/clean"
                style="@style/btn_custom_style"
                android:contentDescription="清除"
                android:src="@drawable/iconfont_cha" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>