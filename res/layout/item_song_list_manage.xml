<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/imageview_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/img_circle" />

    <ImageView
        android:id="@+id/imageview_songlist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:background="@color/main_button_color"
        android:padding="15dp"
        android:src="@drawable/img_songlist" />

    <TextView
        android:id="@+id/textview_song_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:text="歌单名"
        android:textColor="@color/black"
        android:textSize="19sp" />
    
    <TextView
        android:id="@+id/textview_is_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="false"
        android:visibility="gone"/>

</LinearLayout>