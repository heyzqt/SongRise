<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1" >

    <ImageView
        android:id="@+id/img_add_local_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/img_circle" />

    <LinearLayout
        android:id="@+id/linearlayout__add_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/text_add_local_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="歌名"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_add_local_singer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="歌手"
            android:textColor="@color/gray" />
    </LinearLayout>
    
       <TextView
        android:id="@+id/text_add_local_is_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="false"
        android:visibility="gone"/>

</LinearLayout>